#include <tiny13.h>
#include <delay.h>

void main(void)
{
    DDRB = 0x0F;

    while(1)
    {
        PORTB = 0b00000001; 
        delay_ms(400);

        PORTB = 0b00000010; 
        delay_ms(400);

        PORTB = 0b00000100;  
        delay_ms(400);

        PORTB = 0b00001000; 
        delay_ms(400);
    }
}
